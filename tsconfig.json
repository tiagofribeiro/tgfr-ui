{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "target": "ES5",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "jsx": "react-jsx",
        "declaration": true,
        "moduleResolution": "Node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}